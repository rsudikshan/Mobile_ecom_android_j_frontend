<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer -->
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="14dp">
        <shape>
            <solid android:color="#80000000" /> <!-- Semi-transparent black color for shadow -->
            <corners android:radius="30dp" />
        </shape>
    </item>

    <!-- Main shape layer -->
    <item>
        <shape>
            <solid android:color="@color/gradient_start" />
            <corners android:radius="30dp" />
        </shape>
    </item>

</layer-list>
