<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="30dp">

    <TextView
        android:layout_width="0dp"
        android:layout_height="50dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_marginTop="10dp"
        android:id="@+id/register_email_label"
        android:textAlignment="center"
        android:padding="4dp"
        android:text="@string/register_email_label"
        android:textColor="@color/black"
        android:fontFamily="@font/meditative"
        android:textSize="40sp"


    />

    <EditText
        android:layout_width="0dp"
        android:layout_height="50dp"

        app:layout_constraintLeft_toLeftOf="@id/register_email_label"
        app:layout_constraintRight_toRightOf="@id/register_email_label"
        app:layout_constraintTop_toBottomOf="@id/register_email_label"
        android:layout_marginTop="20dp"
        android:inputType="textEmailAddress"

        android:id="@+id/register_email_input"
        android:textAlignment="center"
        android:padding="4dp"
        android:background="@drawable/edit_text_background"
        android:textColor="@color/black"


        />


    <TextView
        android:layout_width="0dp"
        android:layout_height="50dp"

        app:layout_constraintLeft_toLeftOf="@id/register_email_input"
        app:layout_constraintRight_toRightOf="@id/register_email_input"
        app:layout_constraintTop_toBottomOf="@id/register_email_input"

        android:layout_marginTop="20dp"
        android:id="@+id/register_username_label"
        android:textAlignment="center"
        android:padding="4dp"
        android:text="@string/login_username_label"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:fontFamily="@font/meditative"

        />

    <EditText
        android:layout_width="0dp"
        android:layout_height="50dp"

        app:layout_constraintLeft_toLeftOf="@id/register_username_label"
        app:layout_constraintRight_toRightOf="@id/register_username_label"
        app:layout_constraintTop_toBottomOf="@id/register_username_label"
        android:layout_marginTop="20dp"

        android:id="@+id/register_username_input"
        android:textAlignment="center"
        android:padding="4dp"
        android:background="@drawable/edit_text_background"

        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="50dp"

        app:layout_constraintLeft_toLeftOf="@id/register_username_input"
        app:layout_constraintRight_toRightOf="@id/register_username_input"
        app:layout_constraintTop_toBottomOf="@id/register_username_input"
        android:layout_marginTop="20dp"
        android:id="@+id/register_password_label"
        android:textAlignment="center"
        android:padding="4dp"
        android:text="@string/login_password_label"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:fontFamily="@font/meditative"
        />

    <EditText
        android:layout_width="0dp"
        android:layout_height="50dp"

        app:layout_constraintLeft_toLeftOf="@id/register_password_label"
        app:layout_constraintRight_toRightOf="@id/register_password_label"
        app:layout_constraintTop_toBottomOf="@id/register_password_label"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:padding="4dp"
        android:id="@+id/register_password_input"
        android:inputType="textPassword"
        android:background="@drawable/edit_text_background"
        android:textColor="@color/black"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="0dp"
        android:layout_height="50dp"

        app:layout_constraintLeft_toLeftOf="@id/register_password_input"
        app:layout_constraintRight_toRightOf="@id/register_password_input"
        app:layout_constraintTop_toBottomOf="@id/register_password_input"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:padding="4dp"
        android:text="@string/register"
        android:id="@+id/register_btn"
        android:background="@drawable/button_background"
        android:textColor="@color/white"
        />


    <TextView
        android:layout_width="0dp"
        android:layout_height="50dp"

        app:layout_constraintLeft_toLeftOf="@id/register_btn"
        app:layout_constraintRight_toRightOf="@id/register_btn"
        app:layout_constraintTop_toBottomOf="@id/register_btn"
        android:layout_marginTop="40dp"

        android:id="@+id/register_result"
        android:textAlignment="center"
        android:padding="4dp"
        android:textColor="@color/black"
        />

    <ProgressBar
        android:id="@+id/register_loadingIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/register_result"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/> <!-- Initially hidden -->


</androidx.constraintlayout.widget.ConstraintLayout>